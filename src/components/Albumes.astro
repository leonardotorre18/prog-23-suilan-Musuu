---
interface Props {
    category: string;
    artist: string;
    imgURL: string;
    year: number;
}
const { artist, category, imgURL, year } = Astro.props;
---

<div class="flex flex-col items-center grow rounded-x1 bg-amber-50">
    <div>
        <img src={imgURL} alt="" class="w-full h-64 object-cover rounded-2xl" />
    </div>
    <div class="flex flex-col items-center">
        <h1 class="font-bold text-xl">{artist}</h1>
        <p>{category}</p>
        <p>{year}</p>
    </div>
</div>
