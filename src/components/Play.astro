---
import { Icon } from "astro-icon/components";
interface Props {
    imgURL: string;
    title: string;
    artist: string;
}
const { imgURL, title, artist } = Astro.props;
---

<div class="flex flex-col items-center text-center gap-3.5">
    <div>
        <img src={imgURL} alt="" class="w-full h-64 object-cover rounded-2xl" />
    </div>

    <div>
        <h1 class="font-bold text-xl">{title}</h1>
        <p>{artist}</p>
    </div>

    <div class=""><input type="range" name="" id=""></div>

    <div class="flex flex-row items-center gap-14 py-3.5">
        <Icon
            name="fluent:replay-24-regular"
            width="36"
            height="36"
            class="text-purple-900"
        />
        <Icon
            name="fluent:next-32-filled"
            width="36"
            height="36"
            class="text-purple-900 -scale-100"
        />
        <Icon
            name="icon-park-solid:play"
            width="100"
            height="100"
            class="text-violet-950"
        />
        <Icon
            name="fluent:next-32-filled"
            width="36"
            height="36"
            class="text-purple-900"
        />
        <Icon
            name="flowbite:list-music-solid"
            width="36"
            height="36"
            class="text-purple-900"
        />
    </div>
</div>
